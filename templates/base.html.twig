<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        {% block head_css %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
        {% endblock %}
        {% block head_js %}
            <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
        {% endblock %}

    </head>
    <body>
        {% block navbar %}
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="col-2"></div>
                <a class="navbar-brand" href="#">
                    <img src="https://media.istockphoto.com/vectors/graphic-tablet-vector-icon-isolated-on-transparent-background-graphic-vector-id1042289126?k=6&m=1042289126&s=170667a&w=0&h=eu8qBeued0cPl0k4_oEUuzE3QblHnU5x3eqTm3L0_k4=" width="30" height="30" class="d-inline-block align-top" alt="">
                    Tablette !
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02"
                        aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                    <ul class="navbar-nav mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path("accueil") }}">Accueil <span class="sr-only">(current)</span></a>
                        </li>
                    </ul>
                    <ul class="navbar-nav mt-2 mt-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path("categorie_index") }}">Catégories <span class="sr-only">(current)</span></a>
                        </li>
                    </ul>
                    <ul class="navbar-nav mt-2 mt-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path("produit_index") }}">Produits <span class="sr-only">(current)</span></a>
                        </li>
                    </ul>
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        <li class="nav-item">
                            <a class="btn btn-info" href="{{ path("panier_index") }}">Panier <span class="badge badge-light"></span></a>
                        </li>
                    </ul>
                    <form class="form-inline my-2 my-lg-0">
                        {% if not is_granted('ROLE_USER') %}
                            <a href="{{ path("app_login") }}" class="btn btn-primary">Se connecter</a>
                        {% else %}
                            <a href="{{ path("app_logout") }}" class="btn btn-warning">Se déconnecter</a>
                        {% endif %}
                    </form>
                </div>
                <div class="col-2"></div>
            </nav>
        {% endblock %}

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
